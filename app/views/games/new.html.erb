<% start_time = Time.now %>
<h1>New game</h1>

<ul class="letters">
  <% @letters.each do |letter| %>
    <li class="letter">
      <%= letter %>
    </li>
  <% end %>
</ul>

<div class="form">
  <form action="/score" method="post">
    <input type="text" name="word" id="word" placeholder="What's your word?">
    <input type="submit" id="submit">
    <input id="start_time" name="start_time" type="hidden" value="<%= start_time %>"/>
    <input id="letters" name="letters" type="hidden" value="<%= @letters %>"/>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
